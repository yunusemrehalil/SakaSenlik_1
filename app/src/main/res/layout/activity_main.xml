<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >
    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wave">
    </LinearLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/yazi"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:boxBackgroundMode="none"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginTop="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edittexts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             android:cursorVisible="true">
        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <view class="com.example.mykeyboard3.CircleView"
        android:id="@+id/circle_btn_1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/yazi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/circle_btn_2"
        android:layout_margin="20dp"
         />
    <view class="com.example.mykeyboard3.CircleView2"
        android:id="@+id/circle_btn_2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/yazi"
        app:layout_constraintStart_toStartOf="@id/circle_btn_1"
        app:layout_constraintEnd_toEndOf="@id/circle_btn_3"
        android:layout_margin="20dp"

        />
    <view class="com.example.mykeyboard3.CircleView3"
        android:id="@+id/circle_btn_3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/yazi"
        app:layout_constraintStart_toStartOf="@id/circle_btn_2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        />
    <view class="com.example.mykeyboard3.CircleView4"
    android:id="@+id/circle_btn_4"
    android:layout_width="80dp"
    android:layout_height="80dp"
    app:layout_constraintTop_toBottomOf="@+id/circle_btn_1"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="@id/circle_btn_5"
    android:layout_margin="20dp"
    />
    <view class="com.example.mykeyboard3.CircleView5"
        android:id="@+id/circle_btn_5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/circle_btn_2"
        app:layout_constraintStart_toStartOf="@id/circle_btn_4"
        app:layout_constraintEnd_toEndOf="@id/circle_btn_6"
        android:layout_margin="20dp"
        />
    <view class="com.example.mykeyboard3.CircleView6"
        android:id="@+id/circle_btn_6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/circle_btn_3"
        app:layout_constraintStart_toStartOf="@id/circle_btn_5"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>